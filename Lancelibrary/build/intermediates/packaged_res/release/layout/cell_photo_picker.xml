<?xml version="1.0" encoding="utf-8"?>
<com.lance.library.widget.SameWHFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/cell_photo_picker_iv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@android:color/darker_gray"
    android:scaleType="centerCrop" />

  <FrameLayout
    android:id="@+id/cell_photo_picker_cb_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|top"
    android:layout_margin="4dp">

    <CheckBox
      android:id="@+id/cell_photo_picker_cb"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#58000000"
      android:clickable="false" />
  </FrameLayout>
</com.lance.library.widget.SameWHFrameLayout>
